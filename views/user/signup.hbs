<div class="container p-5"> 
  <form action="/signup" method="post">
    <h2 class="col d-flex justify-content-center">Create An Account</h2>
     <div class="form-outline mb-4 pt-5">
        <label class="form-label" for="name">Enter Name</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter full name" />
    </div>
    <!-- Email input -->
    <div class="form-outline mb-4 ">
        <label class="form-label" for="email">Email address</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="enter email"/>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="password">Create Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" />
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
      <div class="col d-flex justify-content-center">
        <!-- Checkbox -->
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            name="chekbox"
            id="form2Example31"
            checked
          />
          <label class="form-check-label" for="form2Example31">
            agree terms & condition
          </label>
        </div>
      </div>

      

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign Up</button>

    <!-- Register buttons -->
    <div class="text-center">
      <p> <a href="/login">Already have account?</a>
     
      
    </div>
  </form>
</div>