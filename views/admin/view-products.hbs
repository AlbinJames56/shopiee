<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success">Add Products</a>
        </div>
        <table class="table mt-2">
  <thead>
    <tr>
      <th scope="col">Sl.NO</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}
      <td><img style="width:50px; height:50px" src="{{this.image}}" alt="" class="src"></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
